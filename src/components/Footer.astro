<style>
  .social-link {
    @apply text-cyan-400 hover:text-magenta-400 transition-all duration-300;
    text-shadow: 0 0 5px currentColor;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  
  .social-link:hover {
    text-shadow: 0 0 10px currentColor, 0 0 20px currentColor;
  }
  
  .social-link:nth-child(1):hover {
    animation: socialBounce 0.6s ease-in-out;
  }
  
  .social-link:nth-child(2):hover {
    animation: socialSpin 0.5s ease-in-out;
  }
  
  .social-link:nth-child(3):hover {
    animation: socialShake 0.5s ease-in-out;
  }
  
  .social-link:nth-child(4):hover {
    animation: socialRoll 0.6s ease-in-out;
  }
  
  @keyframes socialBounce {
    0%, 100% { transform: translateY(0) scale(1); }
    25% { transform: translateY(-8px) scale(1.1); }
    50% { transform: translateY(-4px) scale(1.05); }
    75% { transform: translateY(-6px) scale(1.08); }
  }
  
  @keyframes socialSpin {
    0% { transform: rotate(0deg) scale(1); }
    50% { transform: rotate(180deg) scale(1.15); }
    100% { transform: rotate(360deg) scale(1); }
  }
  
  @keyframes socialShake {
    0%, 100% { transform: translateX(0) rotate(0deg); }
    25% { transform: translateX(-5px) rotate(-5deg); }
    50% { transform: translateX(5px) rotate(5deg); }
    75% { transform: translateX(-3px) rotate(-3deg); }
  }
  
  @keyframes socialRoll {
    0% { transform: rotate(0deg) translateX(0); }
    25% { transform: rotate(90deg) translateX(4px); }
    50% { transform: rotate(180deg) translateX(0); }
    75% { transform: rotate(270deg) translateX(-4px); }
    100% { transform: rotate(360deg) translateX(0); }
  }
</style>
