<style>
  .team-member-card {
    @apply relative rounded-xl overflow-hidden;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.9) 0%, rgba(10, 10, 30, 0.9) 100%);
    border: 1px solid rgba(0, 255, 255, 0.2);
    padding: 2rem;
    min-height: 380px;
    transform-style: preserve-3d;
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .team-member-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 255, 255, 0.1) 0%, rgba(255, 0, 255, 0.1) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  
  .team-member-card:hover::before {
    opacity: 1;
  }
  
  .team-member-card::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, 
      transparent 30%, 
      rgba(0, 255, 255, 0.1) 50%, 
      transparent 70%);
    transform: rotate(45deg);
    transition: all 0.5s ease;
    pointer-events: none;
  }
  
  .team-member-card:hover::after {
    left: 100%;
  }
  
  .team-member-card:hover {
    border-color: rgba(255, 0, 255, 0.5);
    box-shadow: 
      0 20px 40px rgba(0, 255, 255, 0.2),
      0 0 60px rgba(255, 0, 255, 0.15),
      inset 0 0 40px rgba(0, 255, 255, 0.05);
  }
  
  .member-avatar {
    @apply relative w-32 h-32 mx-auto mb-6 rounded-full overflow-hidden;
    border: 3px solid rgba(0, 255, 255, 0.4);
    box-shadow: 
      0 0 20px rgba(0, 255, 255, 0.3),
      0 0 40px rgba(255, 0, 255, 0.2);
    transition: all 0.3s ease;
    transform: translateZ(50px);
  }
  
  .team-member-card:hover .member-avatar {
    border-color: rgba(255, 0, 255, 0.6);
    transform: translateZ(80px) scale(1.05);
    box-shadow: 
      0 0 30px rgba(0, 255, 255, 0.5),
      0 0 60px rgba(255, 0, 255, 0.4);
  }
  
  .avatar-image {
    @apply w-full h-full object-cover;
    filter: brightness(1.1) contrast(1.1);
  }
  
  .member-info {
    @apply text-center flex flex-col items-center gap-2 relative;
    transform: translateZ(30px);
  }
  
  .member-name {
    @apply text-2xl font-orbitron mb-1;
    background: linear-gradient(135deg, #00ffff 0%, #ff00ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 0 10px rgba(0, 255, 255, 0.5));
    transition: all 0.3s ease;
  }
  
  .team-member-card:hover .member-name {
    filter: drop-shadow(0 0 20px rgba(255, 0, 255, 0.8));
  }
  
  .member-role {
    @apply text-gray-300 font-mono text-sm mb-2;
    text-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
  }
  
  .member-position {
    @apply font-mono text-xs font-semibold mb-4 px-4 py-1 rounded-full;
    background: linear-gradient(135deg, rgba(0, 255, 255, 0.2) 0%, rgba(255, 0, 255, 0.2) 100%);
    border: 1px solid rgba(0, 255, 255, 0.3);
    color: #00ffff;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    box-shadow: 0 0 15px rgba(0, 255, 255, 0.2);
    transition: all 0.3s ease;
  }
  
  .team-member-card:hover .member-position {
    border-color: rgba(255, 0, 255, 0.5);
    box-shadow: 0 0 20px rgba(255, 0, 255, 0.4);
    color: #ff00ff;
  }
  
  .social-links {
    @apply flex gap-3 mt-2;
  }
  
  .social-icon {
    @apply p-2.5 rounded-lg transition-all duration-300;
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(0, 255, 255, 0.3);
    color: #00ffff;
    position: relative;
    transform: translateZ(40px);
  }
  
  .social-icon::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 0.5rem;
    background: linear-gradient(135deg, rgba(0, 255, 255, 0.2), rgba(255, 0, 255, 0.2));
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .social-icon:hover {
    border-color: rgba(255, 0, 255, 0.6);
    color: #ff00ff;
    box-shadow: 
      0 0 20px rgba(255, 0, 255, 0.5),
      inset 0 0 10px rgba(255, 0, 255, 0.2);
    transform: translateZ(60px) scale(1.1);
  }
  
  .social-icon:hover::before {
    opacity: 1;
  }
  
  .social-icon svg {
    position: relative;
    z-index: 1;
  }
  
  .skill-card {
    @apply bg-black/50 border border-cyan-500/30 rounded-lg p-6;
    @apply hover:border-magenta-400/50 transition-all duration-300;
